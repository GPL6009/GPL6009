<script>
$("#submitButton").click(function(ev) {
            var form = $("#form1");
            
            $.ajax({
                type: "POST",
                url: "http://localhost:8000/admin/register",
                data: form.serialize(),
                success: function(data) {
                  //console.log(data);
                    // Ajax call completed successfully
                    alert("Form Submited Successfully");
                },
                error: function(data) {
                      
                    // Some error in ajax call
                    alert("some Error");
                }
            });
        });
</script>


